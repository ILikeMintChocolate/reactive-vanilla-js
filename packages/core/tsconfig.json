{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@children/*": [
        "dom/children/*"
      ],
      "@block/*": [
        "dom/block/*"
      ],
      "@component/*": [
        "dom/block/component/*"
      ],
      "@element/*": [
        "dom/block/element/*"
      ],
      "@context/*": [
        "reactive/context/*"
      ],
      "@hook/*": [
        "reactive/hook/*"
      ],
      "@lifecycle/*": [
        "reactive/lifecycle/*"
      ],
      "@router/*": [
        "router/*"
      ],
      "@type/*": [
        "type/*"
      ],
      "@util/*": [
        "util/*"
      ]
    }
  }
}
