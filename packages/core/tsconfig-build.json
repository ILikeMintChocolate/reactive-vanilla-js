{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@children/*": [
        "src/dom/children/*"
      ],
      "@component/*": [
        "src/dom/component/*"
      ],
      "@element/*": [
        "src/dom/element/*"
      ],
      "@context/*": [
        "src/reactive/context/*"
      ],
      "@hook/*": [
        "src/reactive/hook/*"
      ],
      "@lifecycle/*": [
        "src/reactive/lifecycle/*"
      ],
      "@type/*": [
        "src/type/*"
      ],
      "@util/*": [
        "src/util/*"
      ],
      "@dom/*": [
        "src/dom/*"
      ],
      "@reactive/*": [
        "src/reactive/*"
      ],
      "@router/*": [
        "src/router/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "src/main.ts",
    "src/example",
    "src/test"
  ]
}